<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/custom_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_4dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/primary"
    >

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:padding="@dimen/_16dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_primary_inverse"
            android:textSize="@dimen/_17sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"

            tools:visibility="visible"
            tools:text="Some text"
            />

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_6dp"
            android:textColor="@color/text_primary_inverse"
            android:textSize="@dimen/_16sp"
            android:visibility="gone"

            tools:visibility="visible"
            tools:text="This will be some very, very, very, very long text. Or not :))"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_13dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:orientation="horizontal"
        android:minWidth="330dp"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"

            style="@style/Widget.AppTheme.Button"

            tools:text="Cancel"
            tools:visibility="visible"
            />


        <Button
            android:id="@+id/button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8dp"
            android:visibility="invisible"

            style="@style/Widget.AppTheme.Button"

            tools:text="Ok"
            tools:visibility="visible"
            />

    </LinearLayout>

</LinearLayout>
