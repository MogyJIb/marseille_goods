<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Custom colors. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorError">@color/error</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:colorForeground">@color/foreground</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
        <item name="android:textColorSecondaryInverse">@color/text_primary_inverse</item>
        <!-- Custom text. -->
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="Widget.AppTheme.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.AppTheme.ProgressBar" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateTint">@color/accent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="Widget.AppTheme.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="hintEnabled">true</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="android:textColorHint">@drawable/hint_text_color</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HelperText</item>
        <item name="errorTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.Error</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.Hint</item>
        <item name="counterTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.Counter</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.Hint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:paddingRight">@dimen/_4dp</item>
        <item name="android:paddingLeft">@dimen/_2dp</item>
        <item name="android:textColor">@drawable/hint_text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HelperText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@drawable/hint_text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.Error" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.Counter" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@drawable/hint_text_color</item>
    </style>

    <style name="Widget.AppTheme.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="strokeColor">@color/background</item>
        <item name="strokeWidth">@dimen/_2dp</item>
        <item name="cornerRadius">@dimen/_20dp</item>
        <item name="iconGravity">textStart</item>
    </style>

</resources>
